<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/ibZoomIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/zoom_in"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageButton>
    <ImageButton
        android:id="@+id/ibZoomOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/zoom_out"
        app:layout_constraintStart_toEndOf="@+id/ibZoomIn"
        app:layout_constraintTop_toTopOf="parent"></ImageButton>
    <ImageButton
        android:id="@+id/ibDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/dark"
        app:layout_constraintStart_toEndOf="@+id/ibBright"
        app:layout_constraintTop_toTopOf="parent"></ImageButton>
    <ImageButton
        android:id="@+id/ibRotate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/rotate"
        app:layout_constraintStart_toEndOf="@+id/ibZoomOut"
        app:layout_constraintTop_toTopOf="parent"></ImageButton>
    <ImageButton
        android:id="@+id/ibBright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/bright"
        app:layout_constraintStart_toEndOf="@+id/ibRotate"
        app:layout_constraintTop_toTopOf="parent"></ImageButton>
    <ImageButton
        android:id="@+id/ibBlur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/blur"
        app:layout_constraintStart_toEndOf="@+id/ibDark"
        app:layout_constraintTop_toTopOf="parent"></ImageButton>
    <ImageButton
        android:id="@+id/ibEmbos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/embos"
        app:layout_constraintStart_toEndOf="@+id/ibBlur"
        app:layout_constraintTop_toTopOf="parent"></ImageButton>
    <LinearLayout
        android:id="@+id/pictureLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_editor_absoluteY="50dp"></LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>