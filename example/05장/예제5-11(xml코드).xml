<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.widget.Button
            android:id="@+id/baseBtn"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="기준위젯"
            android:layout_centerInParent="true"></android.widget.Button>
        <android.widget.Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1번"
            android:layout_toLeftOf="@+id/baseBtn"
            android:layout_alignTop="@+id/baseBtn"></android.widget.Button>
        <android.widget.Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2번"
            android:layout_toLeftOf="@+id/baseBtn"
            android:layout_alignBaseline="@+id/baseBtn"></android.widget.Button>
        <android.widget.Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3번"
            android:layout_toLeftOf="@+id/baseBtn"
            android:layout_alignBottom="@+id/baseBtn"></android.widget.Button>
        <android.widget.Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4번"
            android:layout_above="@+id/baseBtn"
            android:layout_alignLeft="@+id/baseBtn"></android.widget.Button>
        <android.widget.Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5번"
            android:layout_below="@+id/baseBtn"
            android:layout_alignRight="@+id/baseBtn"></android.widget.Button>
        <android.widget.Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6번"
            android:layout_above="@+id/baseBtn"
            android:layout_toRightOf="@+id/baseBtn"></android.widget.Button>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>