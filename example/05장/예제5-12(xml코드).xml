<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.widget.Button
            android:id="@+id/btnBase1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기준1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"></android.widget.Button>
        <android.widget.Button
            android:id="@+id/btnBase2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기준2"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"></android.widget.Button>
        <android.widget.Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1번"
            android:layout_above="@id/btnBase2"
            android:layout_toRightOf="@id/btnBase1"></android.widget.Button>
        <android.widget.Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2번"
            android:layout_alignParentRight="true"
            android:layout_below="@id/btnBase1"></android.widget.Button>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>