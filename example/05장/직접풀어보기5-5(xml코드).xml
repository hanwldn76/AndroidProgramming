<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="5"
        android:rowCount="9"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <EditText
            android:id="@+id/edit1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="5"
            android:hint="숫자1"></EditText>
        <EditText
            android:id="@+id/edit2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="5"
            android:hint="숫자2"></EditText>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <android.widget.Button
                android:id="@+id/btn0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"></android.widget.Button>
            <android.widget.Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1"></android.widget.Button>
            <android.widget.Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2"></android.widget.Button>
            <android.widget.Button
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3"></android.widget.Button>
            <android.widget.Button
                android:id="@+id/btn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4"></android.widget.Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <android.widget.Button
                android:id="@+id/btn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5"></android.widget.Button>
            <android.widget.Button
                android:id="@+id/btn6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="6"></android.widget.Button>
            <android.widget.Button
                android:id="@+id/btn7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="7"></android.widget.Button>
            <android.widget.Button
                android:id="@+id/btn8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="8"></android.widget.Button>
            <android.widget.Button
                android:id="@+id/btn9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="9"></android.widget.Button>
        </LinearLayout>
        <android.widget.Button
            android:id="@+id/btnAdd"
            android:layout_marginTop="20dp"
            android:layout_gravity="fill_horizontal"
            android:layout_columnSpan="5"
            android:layout_column="0"
            android:layout_row="4"
            android:text="더하기"></android.widget.Button>
        <android.widget.Button
            android:id="@+id/btnSub"
            android:layout_marginTop="20dp"
            android:layout_gravity="fill_horizontal"
            android:layout_columnSpan="5"
            android:layout_column="0"
            android:layout_row="5"
            android:text="빼기"></android.widget.Button>
        <android.widget.Button
            android:id="@+id/btnMul"
            android:layout_marginTop="20dp"
            android:layout_gravity="fill_horizontal"
            android:layout_columnSpan="5"
            android:layout_column="0"
            android:layout_row="6"
            android:text="곱하기"></android.widget.Button>
        <android.widget.Button
            android:id="@+id/btnDiv"
            android:layout_marginTop="20dp"
            android:layout_gravity="fill_horizontal"
            android:layout_columnSpan="5"
            android:layout_column="0"
            android:layout_row="7"
            android:text="나누기"></android.widget.Button>
        <TextView
            android:id="@+id/text1"
            android:layout_marginTop="20dp"
            android:layout_gravity="fill_horizontal"
            android:layout_columnSpan="5"
            android:layout_column="0"
            android:layout_row="8"
            android:text="계산 결과 : "
            android:textSize="20dp"
            android:textColor="#FF0000"></TextView>
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>